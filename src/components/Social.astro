---
const { platform, username } = Astro.props;
---

<a href={`https://www.${platform}.com/${username}`} target="_blank"> {platform}</a>

<style>
  a {
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  a:hover {
    opacity: 0.9;
  }
</style>
